{
  "manifest_version": 3,
  "name": "Summarize Webpage",
  "description": "Summarizes the content of the active tab using Jina API and OpenAI's model.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Summarize Tab",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    }
  },
  "options_page" : "src/options-page/options-page.html"
}
